<h1 class="display-1 blogs__title">Posts</h1>
<div class="blogs">
  {%- for post in collections.posts | reverse -%}
  <article>
    <h2 class="display-6 p-name">
      <a href="{{ post.url }}">{{ post.data.title }}</a>
    </h2>

    <time class="dt-published text-md" datetime="{{ post.data.date | iso }}">
      {{ post.data.date | date }}
    </time>
    <p class="text-xl p-summary">{{ post.data.description }}</p>
  </article>
  {%- endfor -%}
</div>
