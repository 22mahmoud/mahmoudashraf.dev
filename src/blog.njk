---
title: 'Blog'
layout: 'base.njk'
eleventyNavigation:
  key: Blog
---

<h1 class="blogs__title">Blog Posts</h1>

<div class="blogs">
  {%- for post in collections.posts | reverse -%}
  <article>
    <h1 class="text-2xl">
      <a href="{{ post.url }}">{{ post.data.title }}</a>
    </h1>
    <time datetime="{{ post.data.date }}" class="text-sm">
      {{ post.data.date | date }}
    </time>
    <p>{{ post.data.description }}</p>
  </article>
  {%- endfor -%}
</div>
