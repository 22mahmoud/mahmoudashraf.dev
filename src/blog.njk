<h1 class="blogs__title">Blog Posts</h1>

<div class="blogs">
  {%- for post in collections.posts | reverse -%}
  <article>
    <h1 class="text-2xl p-name">
      <a href="{{ post.url }}">{{ post.data.title }}</a>
    </h1>

    <time class="dt-published text-sm" datetime="{{ post.data.date | iso }}">
      {{ post.data.date | date }}
    </time>
    <p class="p-summary">{{ post.data.description }}</p>
  </article>
  {%- endfor -%}
</div>
