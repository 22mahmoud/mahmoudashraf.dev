---
layout: 'markdown.njk'
---

<article class="h-entry post">
  <header>
    <h1 class="display-4 p-name" id="{{ title | slug }}-title">
      {{ title }}
    </h1>
    <div>
      <time class="dt-published" datetime="{{ date | iso }}">
        {{ date | date }}
      </time>
      {% if categories %}
      <span hidden class="p-category">{{ categories | join(', ') }}</span>
      {% endif %}
    </div>
  </header>
  <div class="e-content" itemprop="articleBody">
    {{ content | safe }}
  </div>

  <div class="devto">
    {% set devtoData = devto[page.url] %}
    <h3 class="text-2xl devto__title">
      DEV reactions & comments.
      <span> <a href="{{ devtoData.url }}">ðŸ”—</a> </span>
    </h3>
    <div class="devto__reactions">
      <p>
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512">
          <path
            d="M462.3 62.6C407.5 15.9 326 24.3 275.7 76.2L256 96.5l-19.7-20.3C186.1 24.3 104.5 15.9 49.7 62.6c-62.8 53.6-66.1 149.8-9.9 207.9l193.5 199.8c12.5 12.9 32.8 12.9 45.3 0l193.5-199.8c56.3-58.1 53-154.3-9.8-207.9z"
          />
        </svg>
        {{ devtoData.public_reactions_count }}
      </p>
      <p>
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512">
          <path
            d="M256 32C114.6 32 0 125.1 0 240c0 49.6 21.4 95 57 130.7C44.5 421.1 2.7 466 2.2 466.5c-2.2 2.3-2.8 5.7-1.5 8.7S4.8 480 8 480c66.3 0 116-31.8 140.6-51.4 32.7 12.3 69 19.4 107.4 19.4 141.4 0 256-93.1 256-208S397.4 32 256 32z"
          />
        </svg>
        {{ devtoData.comments_count }}
      </p>
    </div>
  </div>

  <div hidden>
    <a class="u-url" href="{{ page.url | url | absoluteUrl(site.url) }}">{{
      title
    }}</a>
    <p class="h-card p-author">
      <a class="p-name u-url" rel="author" href="{{ site.url }}">{{
        author.name
      }}</a>
      <img
        class="u-photo"
        src="{{ site.logo | url | absoluteUrl(site.url) }}"
      />
    </p>
  </div>
</article>
